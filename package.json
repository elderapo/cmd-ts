{
  "name": "cmd-ts",
  "version": "0.6.8",
  "homepage": "https://cmd-ts.now.sh",
  "license": "MIT",
  "author": "Gal Schlezinger",
  "main": "dist/cjs/index.js",
  "typings": "dist/cjs/index.d.ts",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && tsc --project ./tsconfig.esm.json",
    "lint": "eslint src/**/*.ts test/**/*.ts example/**/*.ts ./.eslintrc.js",
    "// now-build": "typedoc --out public",
    "now-build": "mdbook build --dest-dir=public",
    "start": "yarn build --watch",
    "prepublishOnly": "yarn build && yarn test",
    "test": "jest",
    "ts-node": "./scripts/ts-node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "sideEffects": false,
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "debug": "^4.1.1",
    "didyoumean": "^1.2.1",
    "strip-ansi": "^6.0.0"
  },
  "devDependencies": {
    "@swc-node/jest": "1.1.1",
    "@swc-node/register": "1.0.5",
    "@types/debug": "4.1.5",
    "@types/didyoumean": "1.2.0",
    "@types/fs-extra": "9.0.11",
    "@types/jest": "26.0.22",
    "@types/node-fetch": "2.5.10",
    "@types/request": "2.48.5",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "cargo-mdbook": "0.4.4",
    "docs-ts": "0.6.10",
    "eslint": "7.24.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.4.0",
    "esm": "3.2.25",
    "execa": "5.0.0",
    "fs-extra": "9.1.0",
    "husky": "5.2.0",
    "infer-types": "0.0.2",
    "jest": "26.6.3",
    "jest-junit": "12.0.0",
    "node-fetch": "2.6.1",
    "prettier": "2.2.1",
    "request": "2.88.2",
    "tempy": "1.0.1",
    "typedoc": "0.20.35",
    "typescript": "4.2.4"
  },
  "peerDependencies": {}
}
